@startuml AI_Present_Finder_Use_Cases

!define LIGHTBLUE #E3F2FD
!define BLUE #2196F3

skinparam actor {
    BackgroundColor LIGHTBLUE
    BorderColor BLUE
}

skinparam usecase {
    BackgroundColor LIGHTBLUE
    BorderColor BLUE
}

left to right direction

actor "Użytkownik" as User
actor "Administrator" as Admin

rectangle "AI Present Finder" {
    
    ' Main use cases
    usecase "Podaj link do\nprofilu osoby" as UC1
    usecase "Automatyczna analiza\npublicznych danych" as UC2
    usecase "Rozmowa z\nchatbotem" as UC3
    usecase "Zobacz listę\nsugerowanych prezentów" as UC4
    usecase "Wyświetl linki\ndo sklepów" as UC5
    usecase "Filtruj wyniki\nwedług ceny" as UC6
    usecase "Zapisz sesję\nwyszukiwania" as UC8
    usecase "Wróć do\nzapisanej sesji" as UC9
    usecase "Wystaw opinię" as UC10
    usecase "Pobierz informacje\no opiniach" as UC11
    usecase "Zaloguj się\nprzez Google" as UC12
    usecase "Wróć do\ntrwającego chatu" as UC13
    usecase "Dodaj prezent\ndo ulubionych" as UC14
    
    ' Supporting use cases
    usecase "Przejdź do\nzakupu online" as UC5_1
    usecase "Porównaj prezenty" as UC4_1
    usecase "Sprawdź odpowiedzi\nna pytania" as UC9_1
    usecase "Kontynuuj rozmowę\nz chatbotem" as UC13_1
}

' User relationships
User --> UC1
User --> UC3
User --> UC4
User --> UC5
User --> UC6
User --> UC8
User --> UC9
User --> UC12
User --> UC13

' Admin relationships
Admin --> UC11

' Includes relationships
UC1 ..> UC2 : <<include>>
UC4 ..> UC4_1 : <<include>>
UC5 ..> UC5_1 : <<include>>
UC9 ..> UC9_1 : <<include>>
UC13 ..> UC13_1 : <<include>>
UC10 .> UC4 : <<extend>>
UC14 .> UC4 : <<extend>>

@enduml
