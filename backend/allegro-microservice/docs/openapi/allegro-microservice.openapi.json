{
  "openapi": "3.0.0",
  "paths": {
    "/": {
      "get": {
        "operationId": "AppController_getHello",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Welcome message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "summary": "Returns the welcome message for the Allegro microservice",
        "tags": ["Allegro"]
      }
    },
    "/health": {
      "get": {
        "operationId": "AppController_getHealth",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Service health status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        },
        "summary": "Health check endpoint",
        "tags": ["Allegro"]
      }
    },
    "/allegro": {
      "get": {
        "operationId": "AllegroController_fetchAllegroGet",
        "parameters": [],
        "responses": {
          "200": {
            "description": "List of Allegro listings",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ListingDtoDocument"
                  }
                }
              }
            }
          }
        },
        "summary": "Search Allegro listings",
        "tags": ["allegro"]
      },
      "post": {
        "operationId": "AllegroController_fetchAllegroPost",
        "parameters": [],
        "responses": {
          "200": {
            "description": "List of Allegro listings",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ListingDtoDocument"
                  }
                }
              }
            }
          }
        },
        "summary": "Search Allegro listings (POST)",
        "tags": ["allegro"]
      }
    }
  },
  "info": {
    "title": "AI Present Finder - Allegro Microservice",
    "description": "Endpoints for searching Allegro listings and retrieving product data.",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "components": {
    "schemas": {
      "ListingDtoDocument": {
        "type": "object",
        "properties": {
          "image": {
            "type": "string",
            "description": "Image URL",
            "example": "https://example.com/image.jpg",
            "nullable": true
          },
          "title": {
            "type": "string",
            "description": "Listing title",
            "example": "Lego Star Wars Set"
          },
          "description": {
            "type": "string",
            "description": "Detailed description",
            "example": "Great condition, used once"
          },
          "link": {
            "type": "string",
            "description": "Link to listing",
            "example": "https://olx.pl/..."
          },
          "price": {
            "type": "object",
            "description": "Price details"
          }
        },
        "required": ["image", "title", "description", "link", "price"]
      }
    }
  }
}
