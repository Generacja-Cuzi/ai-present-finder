  "info": {
    "title": "AI Present Finder - Gift Microservice",
    "description": "Endpoints for searching gift listings across sources (OLX, eBay, Amazon).",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [
    {
      "url": "http://localhost:3004"
    }
  ],
  "components": {
    "schemas": {
      "FetchOlxDtoDocument": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query",
            "example": "lego set"
          },
          "limit": {
            "type": "number",
            "description": "Max results to return",
            "example": 40
          },
          "offset": {
            "type": "number",
            "description": "Offset for pagination",
            "example": 0
          }
        },
        "required": ["query"]
      },
      "FetchEbayDtoDocument": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query",
            "example": "vintage camera"
          },
          "limit": {
            "type": "number",
            "description": "Max results to return",
            "example": 20
          },
          "offset": {
            "type": "number",
            "description": "Offset for pagination",
            "example": 0
          }
        },
        "required": ["query"]
      },
      "FetchAmazonDtoDocument": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query",
            "example": "board game"
          },
          "limit": {
            "type": "number",
            "description": "Max results to return",
            "example": 20
          },
          "offset": {
            "type": "number",
            "description": "Offset for pagination",
            "example": 0
          },
          "country": {
            "type": "string",
            "description": "Country code for Amazon site",
            "example": "PL"
          },
          "page": {
            "type": "number",
            "description": "Page number for Amazon results",
            "example": 1
          }
        },
        "required": ["query"]
      },
      "ListingDtoDocument": {
        "type": "object",
        "properties": {
          "image": {
            "type": "string",
            "description": "Image URL",
            "example": "https://example.com/image.jpg",
            "nullable": true
          },
          "title": {
            "type": "string",
            "description": "Listing title",
            "example": "Lego Star Wars Set"
          },
          "description": {
            "type": "string",
            "description": "Detailed description",
            "example": "Great condition, used once"
          },
          "link": {
            "type": "string",
            "description": "Link to listing",
            "example": "https://olx.pl/..."
          },
          "price": {
            "type": "object",
            "description": "Price details"
          }
        },
        "required": ["image", "title", "description", "link", "price"]
      }
    }
  }
}
